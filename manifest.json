{
    "manifest_version": 3,
    "name": "GPT2Org",
    "version": "0.0.6",
    "description": "Use OpenAI API to extract a summary from webpage, then save it in structured formats like Org or Org-roam in Emacs.",
    "homepage_url": "https://github.com/dustincys/GPT2Org/tree/chrome",
    "icons": {
        "256": "img/icon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>",
                "<all_urls>"
            ],
            "js": [
                "lib/Readability.js",
                "capture.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "img/*.png"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting",
        "clipboardWrite"
    ],
    "options_page": "options.html",
    "action": {
        "default_icon": "img/icon.png",
        "default_popup": "popup.html",
        "default_title": "Summary and Capture"
    }
}
